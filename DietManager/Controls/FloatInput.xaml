<UserControl x:Class="DietManager.Controls.FloatInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DietManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="290" Name="TextBoxCustom">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Width="110" Content="{Binding ElementName=TextBoxCustom, Path=Label}"></Label>
            <TextBox Width="180" Text="{Binding ElementName=TextBoxCustom, Path=Text}" Name="customTextBox" GotFocus="CustomTextBox_GotFocus" KeyUp="CustomTextBox_KeyUp">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="Gray"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=customTextBox, Converter={StaticResource FloatConverter}}" Value="False">
                                <Setter Property="BorderBrush" Value="Red"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
