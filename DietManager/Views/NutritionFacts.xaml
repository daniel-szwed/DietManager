<Window x:Class="DietManager.Views.NutritionFacts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DietManager.Views"
        mc:Ignorable="d"
        Title="NutritionFacts" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="Input" Width="200"></TextBox>
            <Button Name="Search" Width="200" Height="30" Foreground="White" Background="blue"
                    Command="{Binding GetNutritionFacts}" 
                    CommandParameter="{Binding Text, ElementName=Input}">
                <TextBlock>
                    <Bold>Search</Bold>
                </TextBlock>
            </Button>
            <TextBlock Name="Result" Height="200" Text="{Binding Response}"></TextBlock>
        </StackPanel>
        
    </Grid>
</Window>
