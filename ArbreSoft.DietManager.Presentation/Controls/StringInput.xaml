<UserControl x:Class="ArbreSoft.DietManager.Presentation.Controls.StringInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArbreSoft.DietManager.Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="290" Name="StringInputControl">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Width="110" Content="{Binding ElementName=StringInputControl, Path=Label}"></Label>
            <TextBox Width="180" Text="{Binding ElementName=StringInputControl, Path=Text}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
