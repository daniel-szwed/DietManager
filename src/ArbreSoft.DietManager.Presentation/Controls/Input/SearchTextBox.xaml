<UserControl x:Class="ArbreSoft.DietManager.Presentation.Controls.Input.SearchTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArbreSoft.DietManager.Presentation.Controls.Input"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
        <TextBox 
            x:Name="inputBox"
            KeyUp="SearchBox_KeyUp"
            Text="{Binding ElementName=StringInputControl, Mode=TwoWay, Path=Text}"
            Width="200" 
            Padding="0,0,30,0" 
            Height="25"/>
        <Button 
            Width="20" 
            Height="20" 
            Content="X"
            Command="{Binding ClearSearch}"
            CommandParameter="{Binding ElementName=inputBox}" 
            BorderBrush="Transparent"
            Background="Transparent"
            HorizontalAlignment="Right" 
            Margin="0,0,5,0"/>
    </Grid>
</UserControl>
